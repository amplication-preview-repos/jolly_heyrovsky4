datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Mine {
  id             String      @id @default(cuid())
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt
  name           String?
  location       String?
  employees      Employee[]
  equipmentItems Equipment[]
  materials      Material[]
  reports        Report[]
}

model Employee {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name      String?
  position  String?
  mine      Mine?    @relation(fields: [mineId], references: [id])
  mineId    String?
}

model Equipment {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name      String?
  typeField String?
  mine      Mine?    @relation(fields: [mineId], references: [id])
  mineId    String?
}

model Report {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  content   String?
  title     String?
  mine      Mine?    @relation(fields: [mineId], references: [id])
  mineId    String?
}

model Material {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name      String?
  quantity  Int?
  mine      Mine?    @relation(fields: [mineId], references: [id])
  mineId    String?
}
